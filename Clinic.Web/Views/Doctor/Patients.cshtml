@model List<Clinic.BLL.VM.PatientVM>
@{
    ViewBag.Title = "My Patients";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}

<div class="row row-grid">

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card widget-profile pat-widget-profile">
                <div class="card-body">
                    <div class="pro-widget-content">
                        <div class="profile-info-widget">
                            <a href="#" class="booking-doc-img">
                                <img src="@item.PatientProfileImage" alt="User Image">
                            </a>
                            <div class="profile-det-info">
                                <h3><a href="#">@item.PatientName</a></h3>

                                <div class="patient-details">
                                    <h5><b>Patient ID :</b> @item.PatientId</h5>
                                    <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> @item.PatientAddress</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="patient-info">
                        <ul>
                            <li>Phone <span>@item.PatientPhone</span></li>
                            <li>Age <span>@item.Age Years, @item.PatientGenderName</span></li>
                            <li>Blood Group <span>@item.PatientBlodGroupName</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }



</div>

