@model List<Clinic.BLL.VM.DoctorVM>
@{
    ViewBag.Title = "Favourites";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="row row-grid">

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="profile-widget">
                <div class="doc-img">
                    <a href="/Home/DoctorProfile/@item.DoctorId">
                        <img class="img-fluid" alt="User Image" src="@item.DoctorProfileImage">
                    </a>
                    <a href="javascript:void(0)" class="fav-btn">
                        <i class="far fa-bookmark"></i>
                    </a>
                </div>
                <div class="pro-content">
                    <h3 class="title">
                        <a href="doctor-profile.html">Dr. @item.DoctorName</a>
                        <i class="fas fa-check-circle verified"></i>
                    </h3>
                    <p class="speciality">@item.DoctorAbout</p>
                    <div class="rating">
                        <i class="fas fa-star filled"></i>
                        <i class="fas fa-star filled"></i>
                        <i class="fas fa-star filled"></i>
                        <i class="fas fa-star filled"></i>
                        <i class="fas fa-star filled"></i>
                        <span class="d-inline-block average-rating">(17)</span>
                    </div>
                    <ul class="available-info">
                        <li>
                            <i class="fas fa-map-marker-alt"></i> @item.CountryName
                        </li>
                        <li>
                            <i class="far fa-money-bill-alt"></i> EGP @item.InsideServicePrice - EGP @item.OutsideServicePrice <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Lorem Ipsum"></i>
                        </li>
                    </ul>
                    <div class="row row-sm">
                        <div class="col-6">
                            <a href="/Home/DoctorProfile/@item.DoctorId" class="btn view-btn">View Profile</a>
                        </div>
                        <div class="col-6">
                            <a href="/Appointment/BookAppointment/@item.DoctorId" class="btn book-btn">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }




</div>

