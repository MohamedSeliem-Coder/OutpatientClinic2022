                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="datatable table table-borderless hover-table" id="data-table">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Doctor</th>
                                        <th>Specialities</th>
                                        <th>Member Since</th>
                                        <th>Phone</th>
                                        <th>Country</th>
                                        <th>Gender</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>#@item.DoctorId</td>
                                            <td>
                                                <h2 class="table-avatar">
                                                    <a class="avatar-pos" href="/Home/DoctorProfile/@item.DoctorId" ><img class="avatar avatar-img" src="@item.DoctorProfileImage" alt="User Image"></a>
                                                    <a href="/Home/DoctorProfile/@item.DoctorId"  class="user-name">Dr. @item.DoctorName</a>
                                                </h2>
                                            </td>
                                            <td>@item.SpecialityName</td>
                                            <td><span class="user-name">@(item.DoctorMemberSince.HasValue? item.DoctorMemberSince.Value.ToString("dd MMMM yyyy"):"") </span><span class="d-block">@(item.CreationDate.HasValue? item.CreationDate.Value.ToString("MM/dd/yyyy"):"")</span></td>
                                            <td>@item.DoctorPhone</td>
                                            <td>@item.CountryName</td>
                                            <td>
                                                @item.DoctorGenderName
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
